{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}

{% endif %}


<div class="search-container">
  {{ form.combine }}
  <button value="Apply">
    <img class="icon search" src="{{ theme_path }}/_assets/images/icon-search.svg"/>
  </button>
  <img class="icon hidden search-close" src="{{ theme_path }}/_assets/images/icon-close.svg"/>
</div>

